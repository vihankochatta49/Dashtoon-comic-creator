    <title>Doshtoon Comic Creator</title>
    <style>
      * {
        margin: 0px;
        padding: 0px;
      }

      body {
        background-color: black;
        font-family: sans-serif;
      }

      button {
        border: none;
      }

      .comicgrid {
        display: flex; 
        justify-content: center; 
        align-items: center; 
        flex-direction: column;
      }

      .nav {
        max-width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 15px 2px 2px white;
        border-bottom: 3px solid black;
        background-color: rgba(0,0,0,0.7);
        padding: 10px;
        height: 50px;
      }

      .imgContainer {
        display: flex;
        align-items: center;
        justify-content: center;
        max-height: 250px; 
        max-width: 250px; 
        border: 2px solid white;
      }

      .imgContainer img {
        height: auto;
        width: auto;
      }
      .intro {
          display:  flex;
          flex-direction: column;
          height: 100%;
          align-items: center;
          justify-content: center;
          background-color: rgba(0,0,0,0.7);
      }

      .head {
        font-size: 2.2rem;
        color: #fff;
        font-weight: 600;
        font-family: cursive;
        margin-left: 15px;
      }

      .dropdown {
        position: relative;
        display: inline-block;
      }

      .profile {
        color: #fff;
        text-decoration: none;
        font-size: 1.5rem;
        margin-left: 30px;
      }

      .profile:hover {
        color: #7a7893;
      }

      .blogs {
        display: grid;
        grid-template-columns: repeat(5,auto);
        grid-template-rows: repeat(2,auto);
        row-gap: 15px;
        align-content: start;
        justify-content: center;
        flex-direction: column;
        padding: 10px 0px 20px;
        margin: 0px 25px;
      }

       
      .comicblock {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      
      .textForm {
        margin: 5px 0;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }

      .textForm input {
        border: 1px solid white;
        border-radius: 5px;
        padding: 3px;
        background-color: #0000007d;
        font-family: cursive;
        font-size: 0.8rem;
        color: white;
      }

      .textForm button {
        border-radius: 5px;
        border: 1px solid white;
        background-color: #0000007d;
        color: #53f12c;
        padding: 3px;
        font-family: cursive;
        font-size: 0.8rem;  
        margin-top: 5px;
      }

      .textForm button:hover {
        color: white;
        background-color: #53f12c;
      }

      img {
        max-width: 100%;
      }

      @media screen and (max-width: 800px) {
        .plus {
          right: 5px;
        }

        .head {
          font-size: 1rem;
          margin-left: 5px;
        }

        .comicgrid {
          display: block;
          position: fixed;
          overflow: scroll;
          height: 100%;
          width: 100%;
          margin: auto;
        }

        .profile {
          font-size: 1rem;
          margin-right: 5px !important;
          margin-left: 0px !important;
        }

         #profile {
             display: none;
         }

         .intro {
             text-align: center;
         }
        .blogs {
          grid-template-columns: auto;
          grid-template-rows: repeat(10,auto);
        }
      }
    </style>
  </head>

